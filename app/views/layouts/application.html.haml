%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'PosterJudging'
    %meta{name: "viewport", content: "width= device-width, initial-scale=1"}
    = stylesheet_link_tag    :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
    :css 
      .header {
        background-color: #500000;
        height: 80px;
      }
    :css 
      .content {
        top: 75px;
        background-color: white;
      }
    :css 
      body {
        background-color: #A9A9A9;
      }

    :css
      .sign-out {
        position: absolute;
        right: 10px;
        top: 35px;
      }

  %body
    %div{class: "header"}
      - if current_user
        = button_to "Sign out", signout_path, :method => :delete, class: "sign-out btn btn-default btn-large", data: {confirm: sign_out_confirm()}
      =image_tag('logo.png', style: "position: absolute; top: 35px;")
      
    %div{:class => "content container"}
      %br
      %div{:class => "col-sm-12 col-lg-12"}
        - if flash[:notice]
          %div{class: "alert alert-success"}
            #notice.message= flash[:notice]
        - elsif flash[:alert]
          %div{class: "alert alert-danger"}
            #notice.message= flash[:alert]
        - elsif flash[:error]
          %div{class: "alert alert-danger"}
            #notice.message= flash[:error]
      = yield
