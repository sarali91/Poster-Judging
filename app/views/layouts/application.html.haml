%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'PosterJudging'
    %meta{name: "viewport", content: "width= device-width, initial-scale=1"}
    = stylesheet_link_tag    :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    :javascript
      var  ConfirmPopup = {
        setup: function() {
          $(document).on('click', '#signout', ConfirmPopup.getConfirmInfo);
          $(document).on('click', '#Cancel', ConfirmPopup.cancel);
          $("#confirm").hide();
          $("#page-content").show();
        }
        ,getConfirmInfo: function(event) {
          event.preventDefault();
          $.ajax({
            type: 'GET',
            url: $(this).attr('href'),
            datatype: "json",
            success: ConfirmPopup.showConfirmInfo,
            error: function (error) {
              $("#Yes").trigger("click");
              return false;
            }
          });
        }
        ,showConfirmInfo: function(json){
          data = $.parseJSON(json);
          if (data){
            $("#Yes").trigger("click");
          } else{
            $("#confirm").show();
            $("#page-content").hide();
          };
          return false;
        }
        ,cancel: function(e){
          $("#confirm").hide();
          $("#page-content").show();
          return false;
        }
      };
      $(ConfirmPopup.setup);
    %div{class: "header"}
      - if current_user
        = link_to "Sign out", signout_check_path, :method => :get,  class: "sign-out", id: "signout", :remote => true
      =image_tag('logo.png', style: "position: absolute; top: 35px;")
    - if current_user
      %div{id: "confirm", class: "confirm-div"}
        Do you want to KEEP unscored posters?
        %div
          = button_to "Yes", signout_path, :method => :delete,  class: "btn btn-primary pull-left",id: "Yes"
          = button_to "Cancel", judge_path(current_user), :method=> :get, class: "btn btn-default pull-right", id: "Cancel"
          = button_to "No", judge_leave_path(current_user), :method => :delete,  class: "btn btn-default",id: "No"
    %div{:class => "content container", id: "page-content"}
      %br
      %div{:class => "col-sm-12 col-lg-12"}
        - if flash[:notice]
          %div{class: "alert alert-success"}
            #notice.message= flash[:notice]
        - elsif flash[:alert]
          %div{class: "alert alert-danger"}
            #notice.message= flash[:alert]
        - elsif flash[:error]
          %div{class: "alert alert-danger"}
            #notice.message= flash[:error]
      = yield
      

  