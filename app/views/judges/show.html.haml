-# in app/views/judges/show.html.haml

%h3 <strong> Howdy</strong>, #{@judge.name} from #{@judge.company_name}!
%br

%h4 Assignments
- if @posters.empty?
  %p None
- else
  %table{class: "table table-bordered", id: "assigned_posters_table"}
    %thead
      %tr
        %th Poster #
        %th Title
        %th Average
        %th Grade
    - @posters.each do |poster|
      %tbody
        %tr
          %td= poster.number
          %td= poster.title
          %td= show_score(@judge_avgs[poster.id])
          %td= button_to 'Grade', edit_judge_score_path(@judge.id, poster.id), :method => :get

- if @orphan_poster
  = button_to 'Accept Another Poster?', judge_score_assign_path(@judge.id, @orphan_poster.id),  method: :put, class: "btn btn-lg btn-default btn-block", data: { confirm: accept_poster_msg}